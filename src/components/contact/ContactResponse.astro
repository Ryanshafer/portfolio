---
import { getCollection } from 'astro:content';
import PostPreview from '../case-studies/PostPreview.astro';

const posts = await getCollection('studies');

//Pick a random post
const randomPost = posts[Math.floor(Math.random() * posts.length)];
---

<section class="my-10 sm:my-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="grid gap-6 lg:grid-cols-2 lg:gap-6">
      <div class="flex flex-col gap-6">
        <h1
          class="w-full font-heading text-4xl-custom font-black text-black dark:text-white lg:w-3/4 lg:text-[clamp(2.25rem,5vw,3.5rem)]"
        >
          Thanks for reaching out!
        </h1>
        <p
          class="max-w-lg font-heading leading-tight text-black dark:text-white sm:text-base sm:leading-tight"
        >
          I'l make sure to read your message and get back to you as soon as I can.
        </p>
      </div>
      <div class="mb-12">
        <h2 class="mb-2 font-heading text-2xl-custom font-black text-black dark:text-white ">Read about past clientsâ€™ work:</h2>
        <div class="grid grid-cols-1 gap-6 pt-5">
          <PostPreview post={randomPost} />
        </div>
      </div>
    </div>
  </div>
</section>
