---
import { Astro } from 'astro';
import Button from '../layout/Button.astro';
---

<section class="my-10 sm:my-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="grid gap-6 lg:grid-cols-2 lg:gap-6">
      <div class="flex flex-col gap-6">
        <h1
          class="w-full font-heading text-5xl lg:text-4xl-custom font-black text-black dark:text-white lg:w-1/2 lg:text-[clamp(2.25rem,5vw,3.5rem)]"
        >
          Let's <br/>Collaborate!
        </h1>
        <p class="max-w-lg font-heading text-black dark:text-white leading-tight sm:text-base sm:leading-tight">
          I'd love to learn more about you and what we can build together.
        </p>
      </div>
      <form
        action="https://formsubmit.co/eed5dfe5504d9b243cf1f78cb3134f5c"
        method="POST"
        class="mt-3 flex flex-col gap-y-6"
      >
        <!-- Full name input -->
        <div>
          <label for="full-name" class="sr-only">Full name</label>
          <input
            type="text"
            name="full-name"
            id="full-name"
            autocomplete="name"
            class="block w-full appearance-none rounded-md border-0 bg-white px-4 py-4 text-base ring-1 ring-black transition placeholder:text-black hover:ring-black/40 focus:outline-none focus:ring-2 focus:ring-primary-600 dark:bg-black dark:ring-white dark:placeholder:text-white dark:hover:ring-purewhite dark:focus:ring-purewhite"
            placeholder="Full name"
          />
        </div>

        <!-- Email input -->
        <div>
          <label for="email" class="sr-only">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            autocomplete="email"
            class="block w-full appearance-none rounded-md border-0 bg-white px-4 py-4 text-base ring-1 ring-black transition placeholder:text-black hover:ring-black/40 focus:outline-none focus:ring-2 focus:ring-primary-600 dark:bg-black dark:ring-white dark:placeholder:text-white dark:hover:ring-purewhite dark:focus:ring-purewhite"
            placeholder="Email"
          />
        </div>

        <!-- Message textarea -->
        <div>
          <label for="message" class="sr-only">Message</label>
          <textarea
            name="message"
            id="message"
            rows="3"
            class="block w-full appearance-none rounded-md border-0 bg-white px-4 py-4 text-base ring-1 ring-black transition placeholder:text-black hover:ring-black/40 focus:outline-none focus:ring-2 focus:ring-primary-600 dark:bg-black dark:ring-white dark:placeholder:text-white dark:hover:ring-purewhite dark:focus:ring-purewhite"
            placeholder="Message"></textarea>
        </div>
        <input type="hidden" name="_next" value={`${Astro.site.origin}/thanks.html`} />
        <div>
          <Button cta="Send message" type="submit" />
        </div>
      </form>
    </div>
  </div>
</section>
