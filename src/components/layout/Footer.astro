---
const year = new Date().getFullYear();
const bottomLinks = [
  {
    header: 'Social',
    links: [
      {
        name: 'LinkedIn',
        href: 'https://linkedin.com/in/ryanshafer',
        isExternal: true,
      },  
      {
        name: 'Github',
        href: 'https://github.com/ryanshafer',
        isExternal: true,
      },
      {
        name: 'Instagram',
        href: 'https://instagram.com/ryanshafer',
        isExternal: true,
      },
    ],
  },
  {
    header: 'Site Map',
    links: [
      {
        name: 'Home',
        href: '/',
        isExternal: false,
      },
      {
        name: 'About',
        href: '/about',
        isExternal: false,
      },
      {
        name: 'Case Studies',
        href: '/case-studies',
        isExternal: false,
      },
      {
        name: 'Contact',
        href: '/contact',
        isExternal: false,
      },
    ],
  },
];
---

<footer
  class="relative mt-24 border-t border-primary-900/10 dark:border-primary-100/10 lg:mt-32"
  aria-labelledby="footer-heading"
>
  <h2 id="footer-heading" class="sr-only">Footer</h2>
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col justify-between gap-16 py-16 lg:flex-row lg:gap-24 lg:py-20">
      <!-- Brand and description -->
      <div class="flex max-w-md flex-col items-start gap-8 lg:max-w-lg">
        <img
          class="h-7 w-auto opacity-90 transition-opacity duration-300 hover:opacity-100 lg:h-8"
          width="227"
          height="40"
          :src="$store.theme.isDark ? '/assets/logo-inverted.svg' : '/assets/logo.svg'"
          alt="Ryan Shafer – User Experience Design Leader"
        />
        <p class="text-primary-950/60 dark:text-primary-200/60 text-base leading-relaxed">
          Ryan Shafer is a design leader who turns complexity into clarity—helping teams and executives deliver user-centered impact through strategy, systems, and culture.
        </p>
        <div class="flex flex-col gap-3 text-sm text-primary-950/50 dark:text-primary-200/50">
          <p class="leading-relaxed">Made with ❤️ using AI-assisted development (Claude Code/Codex, <a href="https://astro.build" class="underline decoration-primary-900/20 underline-offset-2 transition-all duration-200 hover:decoration-primary-900/60 dark:decoration-primary-100/20 dark:hover:decoration-primary-100/60">Astro</a> & <a href="https://tailwindcss.com" class="underline decoration-primary-900/20 underline-offset-2 transition-all duration-200 hover:decoration-primary-900/60 dark:decoration-primary-100/20 dark:hover:decoration-primary-100/60">Tailwind</a>)</p>
          <p>© {year} Ryan Shafer</p>
        </div>
      </div>

      <!-- Navigation links -->
      <div class="grid flex-1 grid-cols-2 gap-x-8 gap-y-12 sm:grid-cols-3 sm:gap-x-12 lg:max-w-xl">
        {
          bottomLinks.map((group) => (
            <div class="flex flex-col gap-5">
              <h3 class="font-heading text-sm font-bold uppercase tracking-wider text-primary-950/40 dark:text-primary-200/40">
                {group.header}
              </h3>
              <ul role="list" class="flex flex-col gap-4">
                {group.links.map((link) => (
                  <li>
                    <a
                      href={link.href}
                      class="group inline-flex items-center gap-1.5 text-base text-primary-950/70 transition-colors duration-200 hover:text-primary-950 focus-visible:text-primary-950 focus-visible:outline-none dark:text-primary-200/70 dark:hover:text-primary-200 dark:focus-visible:text-primary-200"
                      target={link.isExternal ? '_blank' : undefined}
                      rel={link.isExternal ? 'noopener' : undefined}
                    >
                      <span class="border-b border-transparent transition-all duration-200 group-hover:border-current">
                        {link.name}
                      </span>
                      {link.isExternal && (
                        <svg
                          class="h-3.5 w-3.5 opacity-40 transition-all duration-200 group-hover:translate-x-0.5 group-hover:opacity-70"
                          xmlns="http://www.w3.org/2000/svg"
                          viewBox="0 0 24 24"
                          fill="currentColor"
                          aria-hidden="true"
                        >
                          <path d="M10 6V8H5V19H16V14H18V20C18 20.5523 17.5523 21 17 21H4C3.44772 21 3 20.5523 3 20V7C3 6.44772 3.44772 6 4 6H10ZM21 3V11H19L18.9999 6.413L11.2071 14.2071L9.79289 12.7929L17.5849 5H13V3H21Z" />
                        </svg>
                      )}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</footer>
