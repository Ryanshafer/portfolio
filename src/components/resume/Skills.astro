---
const skillGroups = [
  {
    title: 'Design Strategy & Leadership',
    description:
      'Driving UX vision, building high-performing teams, and aligning design with measurable business goals.',
    highlights: [
      'Discovery facilitation',
      'Talent acquisition & development',
      'Executive storytelling',
    ],
  },
  {
    title: 'Human-Centered Design',
    description:
      'Turning research and insights into validated, scalable solutions that balance user needs with product impact.',
    highlights: [
      'Qual/Quant research',
      'Hypothesis-driven design',
      'Usability testing',
      'Rapid prototyping',
    ],
  },
  {
    title: 'Design Operations & Delivery Enablement',
    description:
      'Establishing the structures, rituals, and tools that accelerate design impact, improve delivery, and scale UX across teams.',
    highlights: [
      'Cross-functional rituals',
      'UX roadmap planning',
      'Executive alignment',
      'Async collaboration',
    ],
  },
  {
    title: 'Systems Thinking',
    description:
      'Creating responsive, cross-platform systems that unify patterns, content, and accessibility across experiences.',
    highlights: ['Design system stewardship', 'Information architecture'],
  },
  {
    title: 'Brand & Experience Cohesion',
    description:
      'Connecting marketing and product touchpoints to deliver consistent stories and reinforce customer trust.',
    highlights: [
      'Multichannel orchestration',
      'Campaign-to-product integration',
      'Narrative design',
    ],
  },
];

const tools = [
  'Figma',
  'Miro',
  'FigJam',
  'Notion',
  'UX Research Tools',
  'Quantitative Analytics',
  'Adobe Creative Suite',
  'VSCode/GPT-Codex',
  'HTML/CSS/JS',
  'Tailwind',
  'Astro',
  'Git',
  'DaVinci Resolve',
];

const skills = [
  'UX Strategy',
  'DesignOps',
  'Human-Centered Design',
  'Accessibility',
  'Design Systems',
  'Information Architecture',
  'Prototyping',
  'Research',
  'Agile Delivery',
  'Executive Alignment',
  'SaaS',
  'B2B',
  'B2C',
];
---

<section class="my-4 lg:my-12 prose prose-resume">
  <div
    class="mx-auto grid max-w-2xl grid-cols-4 gap-x-6 gap-y-6 px-4 sm:px-6 lg:max-w-7xl lg:grid-cols-12 lg:gap-x-6 lg:px-8"
  >
    <h2
      class="col-span-full self-start font-heading text-3xl font-bold text-black dark:text-white lg:sticky lg:top-12 lg:col-span-3 lg:col-start-2"
    >
      Skills & Expertise
    </h2>
    <div class="col-span-full mt-1.5 space-y-10 lg:col-span-8 lg:col-start-5">
      <div class="max-w-[65ch] space-y-8">
        {
          skillGroups.map((group) => (
            <article class="font-base text-lg text-black dark:text-white">
              <h3 class="text-2xl font-bold">{group.title}</h3>
              <p class="mt-0">{group.description}</p>
              <p class="mt-2">
                <span class="font-bold">Highlights:</span>
                <span class="ml-1 italic">{group.highlights.join(' · ')}</span>
              </p>
            </article>
          ))
        }
      </div>

      <div class="border-t border-black/50 pt-8 dark:border-white/30">
        <h4 class="text-2xl font-bold">Software & Tools</h4>
        <p class="mt-2 max-w-[65ch] text-lg">{tools.join(', ')}</p>
      </div>
      <div class="border-t border-black/50 pt-8 dark:border-white/30">
        <h4 class="text-2xl font-bold">Core Skills</h4>
        <p class="mt-2 max-w-[65ch] text-lg">{skills.join(' · ')}</p>
    </div>
  </div>
</section>
