---
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';
import Footer from '../components/layout/Footer.astro';
import Header from '../components/layout/Header.astro';
import AlpineInit from '../components/AlpineInit.astro';


interface Props {
  description: string;
  title: string;
  bgFill?: string;
  bgFillDark?: string;
  bgClass?: string; // optional Tailwind classes e.g. "bg-stone-50 dark:bg-slate-900"
  forceDarkTheme?: boolean;
  seoImage?: string;
  seoImageAlt?: string;
  canonical?: string;
  noindex?: boolean;
  ogType?: 'website' | 'article' | 'profile';
  twitterCard?: 'summary' | 'summary_large_image';
}

const {
  description,
  title,
  bgFill,
  bgFillDark = '',
  bgClass,
  forceDarkTheme = false,
  seoImage,
  seoImageAlt,
  canonical,
  noindex = false,
  ogType = 'website',
  twitterCard,
} = Astro.props as Props;

const defaultLight = '#F5F3EF';
const defaultDark = '#3C3758';
const resolvedLight = bgFill ?? defaultLight;
const resolvedDark = bgFillDark || bgFill || defaultDark;

const siteOrigin = Astro.site?.origin;
const currentUrl = Astro.url ? Astro.url.pathname + Astro.url.search : '/';
const canonicalUrl = canonical ?? (siteOrigin ? new URL(currentUrl, siteOrigin).toString() : undefined);
const siteName = siteOrigin ? new URL(siteOrigin).hostname : undefined;

const resolveAbsoluteUrl = (input?: string) => {
  if (!input) return undefined;
  if (/^https?:\/\//i.test(input)) return input;
  if (!siteOrigin) return input;
  return new URL(input, siteOrigin).toString();
};

const defaultFallbackImage = resolveAbsoluteUrl('/assets/ryan-shafer.jpg');
const ogImage = resolveAbsoluteUrl(seoImage) ?? defaultFallbackImage;
const computedTwitterCard = twitterCard ?? (ogImage ? 'summary_large_image' : 'summary');
---

<!DOCTYPE html>
<html
  lang="en"
  x-cloak
  x-data
  x-init="$store.theme.init()"
  :class="{ 'dark': $store.theme.isDark }"
  data-theme-light={resolvedLight}
  data-theme-dark={resolvedDark}
>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="theme-color" content={resolvedLight} />
    <meta name="theme-color" media="(prefers-color-scheme: light)" content={resolvedLight} />
    <meta name="theme-color" media="(prefers-color-scheme: dark)" content={resolvedDark} />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="mobile-web-app-status-bar-style" content="black-translucent" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="stylesheet" href="/tailwind.css" />
    <!-- Cabinet Grotesk -->
    <link
      rel="preload"
      href="/fonts/cabinet-grotesk/CabinetGrotesk-Bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/cabinet-grotesk/CabinetGrotesk-Black.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />

    <!-- IBM Plex Sans -->
    <link
      rel="preload"
      href="/fonts/ibm-plex-sans/IBMPlexSans-Regular-Latin1.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/ibm-plex-sans/IBMPlexSans-Italic-Latin1.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/ibm-plex-sans/IBMPlexSans-Bold-Latin1.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/ibm-plex-sans/IBMPlexSans-BoldItalic-Latin1.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/print.css" media="print" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}
    <meta property="og:type" content={ogType} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {canonicalUrl && <meta property="og:url" content={canonicalUrl} />}
    {siteName && <meta property="og:site_name" content={siteName} />}
    {ogImage && (
      <>
        <meta property="og:image" content={ogImage} />
        {seoImageAlt && <meta property="og:image:alt" content={seoImageAlt} />}
      </>
    )}
    <meta name="twitter:card" content={computedTwitterCard} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {ogImage && <meta name="twitter:image" content={ogImage} />}
    {seoImageAlt && <meta name="twitter:image:alt" content={seoImageAlt} />}
    {noindex && <meta name="robots" content="noindex, nofollow" />}
    <title>{title}</title>
    <ViewTransitions />
    <script defer src="https://cloud.umami.is/script.js" data-website-id="49cc7a0c-0114-4697-8e23-821f1a599e8d"></script>
  </head>
  <body
    class="bg-white text-black dark:bg-darkerblack dark:text-white antialiased transition"
  >
    <Header 
      bgFill={bgFill}
      bgFillDark={bgFillDark}
      bgClass={bgClass}
      forceDarkTheme={forceDarkTheme}
    />
    <main>
      <slot />
    </main>
    <Footer />
    <style is:global>
      [x-cloak] {
        display: none !important;
      }
    </style>
    <AlpineInit />
  </body>
</html>
